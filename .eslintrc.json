{ 
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "sourceType": "module",
     "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": "eslint:recommended",
  "ecmaFeatures": {
        "modules": true,
        "spread" : true,
        "restParams" : true
  },
  "plugins": [
    "react"
  ],
  "globals": {
    "THREE": true,
    "$": true,
    "TweenMax": true,
    "TimelineMax": true
  },
  "rules": {
    "no-console": 1,
    "no-unused-vars": 1,
    "no-fallthrough": 0
  }
}